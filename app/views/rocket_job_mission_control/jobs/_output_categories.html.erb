<div class="panel panel-success">
  <div class="panel-heading">
    <h4>Output Categories</h4>
  </div>

  <div class="panel-body">
    <% @job.output_categories.each do |category| %>
      <div class='row'>
        <div class='col-md-12'>
          <div class="panel panel-success">
            <div class="panel-heading">
              <div class='status-message'>
                <label><%= category.name.to_s.camelcase %></label>
              </div>
            </div>

            <div class="panel-body">
              <% if category.serializer %>
                <label>Serializer:</label>

                <pre><code class="language-ruby">
<%= category.serializer %>
                </code></pre>
              <% end %>

              <% if category.nils %>
                <label>Collect nil Output:</label>

                <pre><code class="language-ruby">
<%= category.nils %>
                </code></pre>
              <% end %>

              <% if category.file_name %>
                <label>File Name:</label>

                <pre><code class="language-ruby">
<%= category.file_name %>
                </code></pre>
              <% end %>

              <% if category.format %>
                <label>Format:</label>

                <pre><code class="language-ruby">
<%= category.format %></td>
                </code></pre>

              <% end %>

              <% if category.format_options %>
                <label>Format Options:</label>

                <pre><code class="language-ruby">
<%= category.format_options.ai(plain: true, ruby19_syntax: true, sort_keys: true) %>
                </code></pre>
              <% end %>

              <% if category.columns %>
                <label>Columns:</label>

                <pre><code class="language-ruby">
<%= category.columns %>
                </code></pre>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
